<%- partial('_partial/hero') %>

<style>
  main {
   margin: 0 auto; 
  }
  @media (min-width: 768px) {
    main {
      width: var(--container-width);
    }
  }
</style>
<main>
  <style>
    #services {
      padding-bottom: 50px;
      background-color: var(--color-off-white);
    }
    @media (min-width: 768px) {
      #services {
        background-color: var(--color-background);
      }
    }
    #services header {
      padding: 50px 0;
      text-align: center;
    }
    #services header h2 {
      font-size: 22px;
      font-weight: bold;
    }
    #services header p {
      margin-top: 10px;
    }
    #services ul {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 10px;
      margin: 0 20px;
    }
    #services li {
      overflow: hidden;
      border-radius: 10px;
      border: 1px solid var(--color-border);
      background-color: #fff;
      box-shadow: 0 10px 50px -30px rgba(0, 0, 0, 0.2);
      list-style: none;
      vertical-align: top;
      transition: all 0.2s ease;
    }
    #services li a {
      display: block;
      color: var(--color-text);
      text-decoration: none;
    }
    #services li figure {
      overflow: hidden;
      position: relative;
      margin: 0;
      padding-bottom: 100%;
    }
    #services li figure img {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    @media (min-width: 768px) {
      #services ul {
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
        margin: 0;
      }
      #services li:hover {
        box-shadow: 0 10px 50px -30px rgba(0, 0, 0, 0.4);
        transform: translateY(-5px);
      }
      #services li figure {
        padding-bottom: 75%;
      }
    }
    #services dl {
      padding: 10px;
    }
    #services dt {
      font-size: 16px;
      font-weight: bold;
    }
    #services dd {
      margin-top: 5px;
      font-size: 12px;
    }
    @media (min-width: 768px) {
      #services dl {
        padding: 20px;
      }
      #services dt {
        font-size: 20px;
        font-weight: bold;
      }
      #services dd {
        font-size: 16px;
      }
    }
  </style>
