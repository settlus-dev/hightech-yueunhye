      display: block;
      width: 200px;
      margin: 0 auto;
    }
    #cases-carousel li figure.report-sheet {
      opacity: 0.5;
      transition: all 0.2s ease;
    }
    #cases-carousel li.slick-center figure.report-sheet {
      opacity: 1;
      box-shadow: 0 10px 50px -30px rgba(0, 0, 0, 0.4);
      transform: scale(1.1);
    }
    #cases-list {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 15px;
    }
    #cases-list li {
      list-style: none;
      align-self: start;
    }
    #cases-list li a {
      display: block;
    }
    @media (min-width: 768px) {
      #cases-list {
        grid-template-columns: repeat(4, 1fr);
      }
      #cases-list li {
        transition: all 0.2s ease;
      }
      #cases-list li:hover {
        box-shadow: 0 10px 50px -30px rgba(0, 0, 0, 0.4);
        transform: translateY(-5px);
      }
    }
    /* 반응형 보기 */
    #cases-carousel {
      display: block;
    }
    #cases-list {
      display: none;
    }
    @media (min-width: 768px) {
      #cases-carousel {
        display: none;
      }
      #cases-list {
        display: grid;
      }
    }
  </style>
  <section id="preview-cases">
    <header>
      <h2>평가사례</h2>
      <p>
        최근 평가 사례입니다.
      </p>
    </header>
    <ul id="cases-carousel">
      <!--  -->
    </ul>
    <ul id="cases-list">
      <!--  -->
    </ul>
    <div class="more">
      <a href="/cases">평가사례 더보기</a>
    </div>
  </section>
  <script>
    axios.get('https://7q4yn3iplb.execute-api.ap-northeast-2.amazonaws.com/rss/ulive_').then(function (response) {
      const posts = response.data;
      const cases = posts.filter(function (post) {
        return (post.category === '평가사례');
      });
      const latestCases = cases.splice(0, 8); // 최근 8개 까지만
      latestCases.forEach(function (item) {
        const {title, guid} = item;
        const postId = guid.split('/')[guid.split('/').length-1];
        const $template = $(`
          <li>
            <a href="/cases/case/?postId=${postId}"></a>
          </li>
        `);
        const $reportSheet = $(`<%- partial('_partial/report-sheet') %>`);
        $reportSheet.find('figcaption').text(title);
        $template.find('a').append($reportSheet);
        $template.clone().appendTo('ul#cases-carousel');
        $template.clone().appendTo('ul#cases-list');
      });

      // Slick
      $('ul#cases-carousel').slick({
        centerMode: true,
        centerPadding: '60px',
        slidesToShow: 1,
        responsive: [
          {
            breakpoint: 768,
            settings: {
              arrows: false,
              centerMode: true,
              centerPadding: '40px',
              slidesToShow: 1
            }
          },
          {
            breakpoint: 480,
            settings: {
              arrows: false,
              centerMode: true,
              centerPadding: '15%',
              slidesToShow: 1
            }
          }
        ]
      });
    })
  </script>
