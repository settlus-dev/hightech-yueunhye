<article class="article-entry" itemprop="articleBody">
  <%- page.content %>
</article>

<style>
  #loading {
    margin: 100px 0;
    text-align: center;
  }
  #articles {
    padding: 0 0 50px;
  }
  #articles li {
    list-style: none;
  }
  #articles li + li {
    border-top: 1px solid var(--color-border);
  }
  #articles li a {
    display: block;
    padding: 20px 0;
    color: var(--color-text);
    text-decoration: none;
  }
  @media (hover:hover) {
    #articles li a {
      transition: transform 0.2s ease;
    }
    #articles li a:hover {
      transform: translateX(10px);
    }
  }
  #articles li h3 {
    font-weight: bold;
    font-size: 20px;
  }
  #articles li p {
    display: -webkit-box;
    overflow: hidden;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    margin: 10px 0 15px;
    color: var(--color-sidebar-text);
    line-height: 150%;
  }
  #articles li time {
    display: block;
    color: var(--color-sidebar-text);
  }
</style>
<div id="loading">
  <img src="/images/ui-loading.svg" width="100" alt="">
</div>
<section id="articles">
  <ul>
    <!--  -->
  </ul>
</section>
<script>
  axios.get('https://7q4yn3iplb.execute-api.ap-northeast-2.amazonaws.com/rss/ulive_')
    .then(function (response) {
      const posts = response.data;
      const articles = posts.filter(function (post) {
        // if (post.category === '일상') return true;
        if (post.category === '하이테크감정평가') return true;
        return false;
      });
      articles.forEach(function (item) {
        const {
          title,
          guid,
          description,
          pubDate
        } = item;
        const postId = guid.split('/')[guid.split('/').length-1];
        const $template = $(`
          <li>
            <a href="/articles/article/?postId=${postId}">
              <h3>${title}</h3>
              <p>${description}</p>
              <time>${dateFns.format(pubDate, 'yyyy-MM-dd HH:mm')}</time>
            </a>
          </li>
        `);
        $('#articles ul').append($template);
      });
    })
    .finally((function () {
      $('#loading').remove();
    }));
</script>
