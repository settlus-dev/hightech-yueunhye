<style>
  #footer-contact {
    position: relative;
    padding: 20px;
    background: url(/images/bg-contact.jpg) no-repeat 50% 50%;
    background-size: cover;
    color: #fff;
  }
  #footer-contact #video-cover {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
  }
  #footer-contact .container {
    position: relative;
  }
  #footer-contact .container .column + .column {
    margin-top: 20px;
  }
  #footer-contact .contact-types li {
    list-style: none;
  }
  #footer-contact .contact-types li + li {
    margin-top: 15px;
  }
  #footer-contact .cases-latest {
    padding: 5px 0 20px;
  }
  #footer-contact iframe {
    display: block;
    width: 100%;
    height: 250px;
    box-sizing: border-box;
    border-radius: 10px;
  }
  @media (min-width: 768px) {
    #footer-contact {
      padding: 40px 20px;
    }
    #footer-contact .container {
      display: flex;
      gap: 30px;
      width: var(--container-width);
      margin: 0 auto;
    }
    #footer-contact .container > .column + .column  {
      margin-top: 0;
    }
    #footer-contact .column {
      flex: 1;
    }
    #footer-contact iframe {
      height: 235px;
    }
  }
</style>

<div id="footer-contact">
  <%- partial('../_partial/video-cover') %>
  <div class="container">
    <div class="column">
      <ul class="contact-types">
        <li>
          <%- partial('../_partial/contact-card', {type: 'online'}) %>
        </li>
        <li>
          <%- partial('../_partial/contact-card', {type: 'kakao'}) %>
        </li>
        <li>
          <%- partial('../_partial/contact-card', {type: 'phone'}) %>
        </li>
      </ul>
    </div>
    <div class="column">
      <div class="cases-latest">
        <%- partial('../_partial/cases-latest') %>
      </div>
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3164.89800121305!2d127.05844787595503!3d37.510323772053226!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x357c9f3081724d63%3A0xe89540eedf8f19d0!2z7ZWY7J207YWM7YGs6rCQ7KCV7Y-J6rCA67KV7J24KOyjvCk!5e0!3m2!1sen!2skr!4v1736754734181!5m2!1sen!2skr"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade">
      </iframe>
    </div>
  </div>
</div>
