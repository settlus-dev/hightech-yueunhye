<style>
  #footer-contact {
    position: relative;
    padding: 20px;
    background: url(/images/bg-office.jpg) no-repeat 50% 50%;
    background-size: cover;
    color: #fff;
  }
  #footer-contact #video-cover {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
  }
  #footer-contact .container {
    position: relative;
  }
  #footer-contact .container hr {
    opacity: 0.3;
    margin: 30px 0;
    border-width: 0 0 1px;
  }
  #footer-contact .contact-types {
    margin-top: 20px;
  }
  #footer-contact .contact-types li + li {
    margin-top: 15px;
  }
  @media (min-width: 768px) {
    #footer-contact {
      padding: 40px 20px;
    }
    #footer-contact .container {
      display: flex;
      gap: 40px;
      width: var(--container-width);
      margin: 0 auto;
    }
    #footer-contact .contact-apps {
      flex: 1;
    }
    #footer-contact .contact-types {
      flex: 1;
    }
  }
</style>

<div id="footer-contact">
  <%- partial('../_partial/video-cover') %>
  <div class="container">
    <div class="contact-apps">
      <%- partial('../_partial/cases-latest') %>
      <hr>
      <%- partial('../_partial/calculator') %>
    </div>
    <ul class="contact-types">
      <li>
        <%- partial('../_partial/contact-card', {type: 'online'}) %>
      </li>
      <li>
        <%- partial('../_partial/contact-card', {type: 'kakao'}) %>
      </li>
      <li>
        <%- partial('../_partial/contact-card', {type: 'phone'}) %>
      </li>
    </ul>
  </div>
</div>
