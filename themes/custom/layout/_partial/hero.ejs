  #footage-front {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    aspect-ratio: 2.57;
    perspective: 500px;
  }
  #footage-front .footage {
    overflow: hidden;
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 0 3px 3px 0;
    transform: rotateY(38deg);
	  transform-origin: 0 0;
  }
  #footage-front .footage:before,
  #footage-front .footage:after {
    z-index: 10;
    content: "";
    display: block;
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    
  }
  #footage-front .footage:before {
    background: linear-gradient(90deg, rgba(255,255,255,1) 0%, rgba(255,255,255,0) 5%);
  }
  #footage-front .footage:after {
    background: linear-gradient(90deg, rgba(0,0,0,0) 50%, rgba(0,0,0,0.5) 100%);
  }
  #footage-side {
    position: absolute;
    top: 0;
    right: -1px;
    bottom: 0;
    aspect-ratio: 0.82;
    perspective: 500px;
  }
  #footage-side .footage {
    overflow: hidden;
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 4px 0 0 4px;
    transform: rotateY(-50deg);
	  transform-origin: 100% 0;
  }
  #footage-side .footage:before,
  #footage-side .footage:after {
    z-index: 10;
    content: "";
    display: block;
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    
  }
  #footage-side .footage:before {
    background: linear-gradient(90deg, rgba(255,255,255,0) 80%, rgba(255,255,255,1) 100%);
  }
  #footage-side .footage:after {
    background: linear-gradient(90deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0) 10%);
  }
  .footage video {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: #000;
    object-fit: cover;
  }
</style>
