<style>
  #hero {
    position: relative;
    padding: 0 0 100%;
    background: linear-gradient(0deg, var(--color-highlight) 0%, #ffd671 100%);
  }
  #hero figure {
    margin: 0;
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: auto;
    height: 100%;
  }
  #hero figure img {
    display: block;
    width: auto;
    height: 100%;
  }
  @media (min-width: 768px) {
    #hero {
      height: 100vh;
      min-height: 700px;
      padding: 0;
    }
    #hero figure {
      height: 90%;
      transform: translateX(-10%);
    }
    #hero figure img {
      height: 100%;
    }
  }
</style>
<div id="hero">
  <figure>
    <img src="/images/fig-hero.png" alt="">
  </figure>
  <script>
    const { animate, scroll } = Motion;
    animate('#hero figure img', {
      opacity: [0, 1], 
      x: [-10, 0]
    }, {
      delay: 0.3,
      duration: 0.5,
      easing: 'ease'
    }).finished.then(() => {
      scroll(
        animate('#hero figure img', {
          opacity: [1, 0]
        }),
        {
          target: document.querySelector('#hero figure img'),
          offset: ['start start', 'end start']
        }
      );
    });
  </script>
