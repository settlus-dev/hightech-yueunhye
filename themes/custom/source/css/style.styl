@import "nib"
@import "_variables"
@import "_util/mixin"
@import "_util/grid"

global-reset()

input, button
  margin: 0
  padding: 0
  &::-moz-focus-inner
    border: 0
    padding: 0

html, body, #container
  height: 100%

body
  background: color-background
  font: font-size font-sans
  -webkit-text-size-adjust: 100%

.outer
  clearfix()
  margin: 0 auto
  padding: 0
  @media mq-normal
    width: column-width * columns

.inner
  column(columns)

.left, .alignleft
  float: left

.right, .alignright
  float: right

.clear
  clear: both

.only-desktop {
  display: none;
}

@media (min-width: 768px) {
  .only-mobile {
    display: none;
  }
  .only-desktop {
    display: initial;
  }
}

#container
  position: relative

#container-sticky
  z-index: 10
  position absolute
  right: 0
  left: 0
  @media mq-normal
    left: 50%
    width: var(--container-width)
    transform: translateX(-50%)

.mobile-nav-on
  overflow: hidden

#wrap
  height: 100%
  width: 100%
  position: absolute
  top: 0
  left: 0
  transition: 0.2s ease-out
  z-index: 1
  background: color-background
  .mobile-nav-on &
    left: mobile-nav-width

if sidebar and sidebar isnt bottom
  #main
    padding: 0 gutter-width
    @media mq-normal
      float: left
      width: column-width * main-column
      padding: 0 gutter-width 0 0
      box-sizing: border-box

if sidebar is left
  @media mq-normal
    #main
      float: right
      padding: 0 0 0 gutter-width

#main-full
  padding: 0 gutter-width

@import "_extend"
@import "_partial/header"
@import "_partial/article"
@import "_partial/comment"
@import "_partial/archive"
@import "_partial/footer"
@import "_partial/highlight"
@import "_partial/mobile"

if sidebar
  @import "_partial/sidebar"