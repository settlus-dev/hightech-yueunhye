#footer
  background: color-footer-background
  padding: 30px 0

#footer-info
  margin: 0 20px
  line-height: line-height
  color: #fff
  font-size: 12px
  text-align: center
  a
    color: #fff
    text-decoration: underline
  figure
    margin: 0
  address
    display: block
    margin-top: 20px
  ul
    margin-top: 10px
    li:nth-child(1),
    li:nth-child(2)
      display: inline-block
    li:nth-child(1) + li:nth-child(2)
      margin-left: 7px
    li
      font-weight: bold
    li a
      font-weight: normal
  .copyright
    margin-top: 40px
    color: color-grey 
@media mq-normal
  #footer-info
    max-width: container-width
    margin: 0 auto
    text-align: right
    figure
      float: left
    address
      margin-top: 0