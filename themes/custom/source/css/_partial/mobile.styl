#mobile-nav
  position: absolute
  top: 0
  bottom: 0
  left: 0
  width: mobile-nav-width
  padding-top: 10px
  background: color-mobile-nav-background
  border-right: 1px solid #fff

.mobile-nav-link
  display: block
  color: color-grey
  text-decoration: none
  padding: 15px 20px
  font-weight: bold
  &:hover
    color: #fff
